    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server Probater Hawks: Run flask app in dev post",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "hawks_batter_server/server/app:create_app()",
                "FLASK_ENV": "production",
            },
            "args": [
                "run",
                "--host",
                "0.0.0.0",
                "--no-reload",
            ]
        },
    ]
}
